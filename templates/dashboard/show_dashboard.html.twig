{% extends "layouts/base.html.twig" %}

{% block content %}
    

        <div class="row">
                <div class="col-12">
                        {% include "components/_flashe.html.twig" %}
                </div>
        </div>
        <div class="row">
                <h1 class="col-12 text-center my-2">Tout les articles</h1>
        </div>
        <table class="table">
            <thread>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Crée le</th>
                <th>Modifié le</th>
                <th>Action</th>
            </tr>
            </thread>
            <tbody>
            {% for post in posts %}
            <tr>
                <td>{{post.id}}</td>
                <td>{{post.category.name}}</td>
                <td>{{post.title | length > 20 ? post.title | slice(0,20) ~ '...'}}</td>
                <td>{{post.content | length > 50 ? post.content | slice(0,50) ~ '...' : post.content}}</td>
                <td>{{post.createdAt | date('d/m/Y')}}</td>
                <td>{{post.updatedAt | date('d/m/Y')}}</td>
                <td>
                <a href="{{path('update_post',{'id' : post.id})}}" class="btn btn-info"></a>
                <a href="{{path('delete_post',{'id' : post.id})}}" class="btn btn-danger"></a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class"row"> 
                    <h1 class="col-12 text-center my-2">Tout les catégories</h1>
        </div>

         <table class="table">
            <thread>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Action</th>
            </tr>
            </thread>
            <tbody>
            {% for category in categories %}
            <tr>
                <td>{{category.id}}</td>
                <td>{{category.name}}</td>
                <td>
               <a href="" class="btn btn-info"></a>
                <a href="" class="btn btn-danger"></a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row">
                <h1 class="col-12 text-center my-2">Tout les utilisateurs</h1>
        </div>

        <table class="table">
            <thread>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Rôle</th>
                <th>Mail</th>
                <th>Action</th>
            </tr>
            </thread>
            <tbody>
            {% for user in users %}
            <tr>
                <td>{{users.id}}</td>
                <td>{{users.firstname}}</td>
                <td>{{users.lastname}}</td>
                <td>{{users.roles}}</td>
                <td>{{users.email}}</td>
                <td></td>
                <td>
                <a href="" class="btn btn-info"></a>
                <a href="" class="btn btn-danger"></a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>


{% endblock %}